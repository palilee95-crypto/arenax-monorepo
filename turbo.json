{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
            "env": [
                "NEXT_PUBLIC_SUPABASE_URL",
                "NEXT_PUBLIC_SUPABASE_ANON_KEY",
                "NODE_ENV"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ],
            "cache": true
        },
        "type-check": {
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}